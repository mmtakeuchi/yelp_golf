<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= course.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= course.name%></h5>
        <p class="card-text"><%= course.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= course.location%></li>
        <li class="list-group-item">$<%= course.price%></li>
      </ul>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/golfcourses/<%=course._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/golfcourses/<%=course._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
    <h2>Leave a Review</h2>
    <form
      class="mb-3 validated-form"
      action="/golfcourses/<%=course._id%>/reviews"
      method="POST"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% for(let review of course.reviews) {%>
    <div class="mb-3">
      <p>Rating: <%= review.rating %></p>
      <p>Review: <%= review.body %></p>
    </div>
    <% } %>
  </div>
</div>
