<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Add Golf Course</h1>
  <div class="col-6 offset-3">
    <form action="/golfcourses" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="course[name]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="course[image]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="course[description]"
        ></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="course[location]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Tee Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="course[price]"
          />
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Add Golf Course</button>
      </div>
    </form>

    <div><a href="/golfcourses">Back to Golf Courses</a></div>
  </div>
</div>
