<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="conatinaer">
  <h1>All Golf Courses</h1>
  <div>
    <a href="/courses/new">Add Golf Course</a>
  </div>
  <% for (let course of courses){%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (course.images.length) { %>
        <img class="img-fluid" alt="" src="<%=course.images[0].url%>" />
        <% } else { %>
        <img
          class="img-fluid"
          alt=""
          src="https://source.unsplash.com/ofzjqw5Ua4I/1600x900"
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= course.name %></h5>
          <p class="card-text"><%= course.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= course.location%></small>
          </p>
          <a class="btn btn-primary" href="/courses/<%=course._id%>"
            >View <%=course.name%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const courses = {features: <%- JSON.stringify(courses) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
