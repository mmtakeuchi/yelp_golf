<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Add Golf Course</h1>
  <div class="col-6 offset-3">
    <form
      action="/courses"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="course[name]"
          required
        />
      </div>
      <input type="file" name="image" multiple />
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="course[image]"
          required
        />
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="course[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="course[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Tee Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="course[price]"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Add Golf Course</button>
      </div>
    </form>

    <div><a href="/courses">Back to Golf Courses</a></div>
  </div>
</div>
