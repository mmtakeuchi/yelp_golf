<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Add Golf Course</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/courses"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="course[name]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="course[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="course[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Green Fee</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="course[price]"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <div class="custom-file">
          <label for="image" class="form-label">Upload Images</label>
          <input
            class="form-control form-file-input"
            type="file"
            id="image"
            name="image"
            multiple
          />
          <label class="form-label custom-file-label" for="image"></label>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Add Golf Course</button>
      </div>
    </form>

    <div class="mt-3"><a href="/courses">Back to Golf Courses</a></div>
  </div>
</div>
